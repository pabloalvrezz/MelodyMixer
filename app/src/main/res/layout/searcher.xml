<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cnlBuscador"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/srvBuscadorCanciones"
        android:layout_width="375dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvhResultadosBusqueda"
        android:layout_width="375dp"
        android:layout_height="600dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtResultadosCanciones" />

    <TextView
        android:id="@+id/txtResultadosCanciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="@string/resultados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/srvBuscadorCanciones" />

    <ProgressBar
        android:id="@+id/prgbLoader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="340dp"
        android:progressTint="@color/fondo_claro"
        app:layout_constraintBottom_toBottomOf="@+id/rvhResultadosBusqueda"
        app:layout_constraintEnd_toEndOf="@+id/rvhResultadosBusqueda"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/rvhResultadosBusqueda"
        app:layout_constraintTop_toTopOf="@+id/rvhResultadosBusqueda" />
</androidx.constraintlayout.widget.ConstraintLayout>